<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mycompany</groupId> <!-- 替换为你自己的组织或公司名称 -->
    <artifactId>race-simulation</artifactId> <!-- 替换为你的项目名称 -->
    <version>1.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source> <!-- 根据你使用的 JDK 版本调整 -->
        <maven.compiler.target>17</maven.compiler.target> <!-- 根据你使用的 JDK 版本调整 -->
        <javafx.version>21</javafx.version> <!-- 使用一个兼容你 JDK 的最新 JavaFX 版本 -->
    </properties>

    <dependencies>
        <!-- JavaFX Controls -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier> <!-- 指定操作系统为 Windows -->
        </dependency>

        <!-- JavaFX FXML (如果你的应用使用了 FXML) -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier> <!-- 指定操作系统为 Windows -->
        </dependency>

        <!-- 如果你使用了其他 JavaFX 模块，也需要在这里添加依赖 -->
        <!-- 例如: javafx-graphics, javafx-base, etc. -->

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version> <!-- 使用一个合适的版本 -->
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <!-- 可选: JavaFX Maven 插件，用于运行和打包应用 -->
            <!-- 如果你只需要解决导入问题，可以暂时不加 -->
            <!--
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version> // 使用一个合适的版本
                <configuration>
                    <mainClass>com.yourcompany.race_simulation.Main</mainClass> // 替换为你的主类完整路径
                </configuration>
            </plugin>
            -->
        </plugins>
    </build>
</project>